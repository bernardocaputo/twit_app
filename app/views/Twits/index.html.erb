<div class="row">
  <form class="col s12 m4 l3">
      <div class="input-field col s12">
        <textarea id="twitcontent" class="materialize-textarea" data-length="140"></textarea>
        <label for="twitcontent">Textarea</label>
        <!-- <%= form_tag("/twits", method: "post", class: "col s12 add_twit") do %> -->
          <button id="post" class="btn btn-medium waves-effect waves-light blue" type="submit">
            <span>POST</span>
          </button>
        <!-- <% end %> -->
      </div>
  </form>
    <div class="col s12 m7 l7">
      <% @twits.each do |t| %>
          <div class="card" id="card_<%= t.id %>">
              <div class="card-content">
                <span class="card-title"> <%= "@" + t.user.username %></span>
                  <p id="content_<%= t.id %>"> <%= t.content %> </p>
              </div>
              <div class="card-action">
                <a class="left edit_twit" href="#" id="<%= t.id %>">
                  <i class="material-icons" id="<%= t.id %>">edit</i>
                </a>
                <a class="right remove_twit" href="#" id="<%= t.id %>">
                  <i class="material-icons" id="<%= t.id %>">delete</i>
                </a>
              </div>
          </div>
      <% end %>
    </div>
</div>
